<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.arch.kvmcdemo">

    <application
        android:name="com.arch.application.KVMCDemoApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name="com.arch.session.SessionEngine"
            android:enabled="true"
            android:exported="false"
            android:process=":session">
            <intent-filter>
                <action android:name="com.arch.session.SessionEngine" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </service>
        <service
            android:name="com.arch.live.LiveService"
            android:enabled="true"
            android:exported="false"
            android:launchMode="singleTask"
            android:process=":live"></service>

        <activity
            android:name="com.arch.live.LiveTestActivity"
            android:process=":live"
            android:label="@string/title_activity_live_test"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <service
            android:name=".MainService"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="com.arch.kvmcdemo.MainService" />
            </intent-filter>
        </service>
    </application>

</manifest>